{{>header}}

    <div class="home">
        <div class="wrapper">
            <div class="posts">
               
{{#each allData}}      
               <a href="/single/{{_id}}" class="post target">
                     <div class="postTopbar">
                        <h1>{{title}}</h1>
                        <button type="button" class="deleteBtn">
                             <i class="fa-solid fa-trash"></i>
                        </button>
                        
                        
                    </div>
                    <img src="{{path}}" alt="content">
                    <p>{{post}}</p>
                    <div class="authorAndDate">
                        <span>{{author}}</span>
                        <span>{{date}}</span>
                    </div> 
                    
               </a>

{{/each}}

            </div>
            <div class="sidebar">
                <div class="area target">
                    <h2>Who I Am</h2>
                    <img src="/img/user/user-2.png" alt="user">
                    <div class="categories">
                        <span>#art</span>
                        <span>#design</span>
                        <span>#paint</span>
                        <span>#culture</span>

                    </div>
                </div>
                <div class="area target">
                    <h2>Your Space</h2>
                    <a href="/admin/add">Add Post</a>
                    <a href="#">Your Performans</a>
                    <a href="#">Number of Views</a>
                    
                   
                </div>
            </div>
        </div>
    </div>
